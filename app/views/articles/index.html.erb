<p>Index Page</p>

<table>
  <thead>
    <tr>
      <td>Id</td>
      <td>Title</td>
      <td>Text</td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |a| %>
    <tr>
      <td><%= a.id %></td>
      <td><%= a.title %></td>
      <td><%= a.text %></td>
      <td><%= link_to 'Show', article_path(a) %></td>
      <td><%= link_to 'Edit', edit_article_path(a) %></td>
      <td><%= link_to 'Delete', article_path(a), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>